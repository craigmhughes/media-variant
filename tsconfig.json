{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "verbatimModuleSyntax": true
  },
  "include": ["src"],
  "moduleResolution": "bundler",
  "allowImportingTsExtensions": true,
  "moduleDetection": "force",
  "noEmit": true,
}